<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%-include('./partials/nav.ejs')%>

    <div class="showOptions">
        <a href="/pets/<%=pet._id%>/edit" class="button">Edit</a>
        <form action="/pets/<%= pet._id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" class="button delete">
    </form>
</div>
    <% let dateFormat = new Date(pet.createdAt) %>
    <p>Date posted: <%= (dateFormat.getMonth()+1)+ "/" + dateFormat.getDate() + "/" + dateFormat.getFullYear()%>  </p>
    <h1 style="text-align: center;"><%=pet.name%></h1>

        <img src="<%=pet.img%>" class="showImg">

    <div class="showContent">
        <div>
            <p class="content">Breed: <%=pet.breed%></p>
            <p class="content">Age: <%=pet.age%></p>
        </div>
        <div>
            <p class="content">Color: <%=pet.color%></p>
            <% if(pet.aggressive === false){ %>
                <p class="content">Aggressive: <i class="fa-regular fa-face-smile"></i></p>
            <% }else{ %>
                <p class="content">Aggressive: <i class="fa-regular fa-face-angry"></i></p>
            <% } %>
        </div>
    </div>
</body>
</html>

