<h1>Create New Animal</h1>

<div class="form">
    <form action="/pets" method="POST">

        <div class="inputBox">
            <input type="text" name="name" placeholder="NAME">
        </div>
        <div class="inputBox">
            <input type="text" name="type" placeholder="TYPE">
        </div>
        <div class="inputBox">
            <input type="text" name="breed" placeholder="BREED">
        </div>
        <div class="inputBox">
            <input type="number" name="age" placeholder="AGE">
        </div>
        <div class="inputBox">
            <input type="text" name="color" placeholder="COLOR">
        </div>
        <div class="inputBox">
            <input type="text" name="img" placeholder="IMG LINK">
        </div>
        <div class="aggressive">
            AGGRESSIVE<input type="checkbox" name="aggressive">
        </div>
        <div class="createBTN">
            <input type="submit" value="Create Animal">
        </div>



    </form>
</div>


</body>
